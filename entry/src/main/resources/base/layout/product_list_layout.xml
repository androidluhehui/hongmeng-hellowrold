<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
                   ohos:width="match_parent"
                   ohos:height="match_parent"
                   ohos:padding="20vp"
                   ohos:orientation="vertical">

    <Text
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:text="我是产品列表页面"
            ohos:text_size="25fp"
            />

    <Button
            ohos:top_margin="40vp"
            ohos:id="$+id:btn"
            ohos:width="200vp"
            ohos:height="40vp"
            ohos:text_size="25fp"
            ohos:text_color="#ffffff"
            ohos:background_element="#000000"
            ohos:text="前往详情页面"/>

    <Button
            ohos:top_margin="40vp"
            ohos:id="$+id:btn2"
            ohos:width="300vp"
            ohos:height="40vp"
            ohos:text_size="25fp"
            ohos:text_color="#ffffff"
            ohos:background_element="#000000"
            ohos:text="前往详情页面,并返回数据"/>

    <Button
            ohos:top_margin="40vp"
            ohos:id="$+id:btn3"
            ohos:width="300vp"
            ohos:height="40vp"
            ohos:text_size="20fp"
            ohos:text_color="#ffffff"
            ohos:background_element="#000000"
            ohos:text="前往另一个Page中的AbilitySlice"/>

</DirectionalLayout>